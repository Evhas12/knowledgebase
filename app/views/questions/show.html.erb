<section>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">

        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/"><%= link_to @question.category.title, category_path(@question.category) %></a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= @question.topic %></li>
          </ol>
        </nav>

        <h2 class="text-secondary"><%= @question.topic %></h2>

        <div class="col-lg-12 text-secondary py-2" data-controller="new-tab">
          <%= @question.answer %>
        </div>

        <% if user_signed_in? %>
          <div class="mt-4 pt-4">
            <hr>
            <%= link_to "Edit this question", edit_question_path(@question) %> |
            <%= link_to "Back to questions", questions_path %>

            <%= button_to "Destroy this question", @question, form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: "btn btn-danger mt-4" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</section>