<section class="text-secondary">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1>Questions</h1>

        <table class="table text-secondary">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Title</th>
              <th scope="col">Slug</th>
              <th scope="col">Category</th>
              <th scope="col">Created at</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
             <% @questions.each do |question| %>
              <tr>
                <th scope="row"><%= question.id %></th>
                <td><%= question.topic %></td>
                <td><%= question.slug %></td>
                <td><%= link_to question.category.title, category_path(question.category) %></td>
                <td><%= question.created_at.to_formatted_s(:long_ordinal) %></td>
                <td><%= link_to "View", question %></td>
                <td><%= link_to "Edit", edit_question_path(question) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div id="paginator" class="mt-4">
          <%= paginate @questions, 
            theme: 'bootstrap-5',
            pagination_class: 'pagination-sm flex-wrap justify-content-center',
            nav_class: 'd-inline-block' 
          %>
        </div>

        <%= link_to "New question", new_question_path, class: "btn btn-success mt-4" %>

      </div>
    </div>
  </div>
</section>