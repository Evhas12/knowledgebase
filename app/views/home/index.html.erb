<section>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <%= render 'questions/search_form' %>
      </div>
    </div>
  </div>
</section>

<section id="home-content" style="z-index: 1;">
  <div class="container">
    <div class="row gutter-3 mt-3">
      <% @categories.each do |category| %>
        <div class="col-md-6">
          <div class="card my-4 border-light">
            <div class="card-body">
              <div class="row gutter-2 align-items-center">
                <div class="col">
                  <h3 class="card-title font-weight-normal mb-2"><%= link_to category.title, category_path(category) %> <span class="text-secondary small">(<%= category.questions.count %>)</span></h3>
                  <ul class="list-group">
                    <% category.questions.limit(5).each do |question| %>
                      <li class="list-group-item border-light py-1">
                        <%= link_to question.topic, question_path(question), class: "card-link" -%>
                      </li>
                    <% end %>
                  </ul>
                  <div>
                    <%= link_to "View All", category_path(category), class: "btn btn-primary action mt-4 text-pink card-link" %>
                  </div>
                </div>
              </div>
              <i class="icon-award icon-background text-pink"></i>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>