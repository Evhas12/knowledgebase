<section class="text-secondary">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1>Categories</h1>

        <table class="table text-secondary">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Title</th>
              <th scope="col">Slug</th>
              <th scope="col">Questions count</th>
              <th scope="col">Created at</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
             <% @categories.each do |category| %>
              <tr>
                <th scope="row"><%= category.id %></th>
                <td><%= category.title %></td>
                <td><%= category.slug %></td>
                <td><%= category.questions.count %></td>
                <td><%= category.created_at.to_formatted_s(:long_ordinal) %></td>
                <td><%= link_to "View", category %></td>
                <td><%= link_to "Edit", edit_category_path(category) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div id="paginator" class="mt-4">
          <%= paginate @categories, 
            theme: 'bootstrap-5',
            pagination_class: 'pagination-sm flex-wrap justify-content-center',
            nav_class: 'd-inline-block' 
          %>
        </div>

        <%= link_to "New category", new_category_path, class: "btn btn-success mt-4" %>

      </div>
    </div>
  </div>
</section>