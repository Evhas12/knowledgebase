<section id="category-page">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
      
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page"><%= @category.title %></li>
            </ol>
          </nav>

          <h2 class="text-secondary"><%= @category.title %></h2>

          <ul class="list-group-numbered">
            <% @category.questions.each do |question| %>
              <li class="list-group-item border-light py-1">
                <%= link_to question.topic, question_path(question), class: "" -%>
              </li>
            <% end %>
          </ul>

          <% if user_signed_in? %>
            <div class="mt-4 pt-4">
              <hr>
              <%= link_to "Edit this category", edit_category_path(@category) %> |
              <%= link_to "Back to categories", categories_path %>

              <%= button_to "Destroy this category", @category, method: :delete, class: "btn btn-danger mt-2" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</section>
