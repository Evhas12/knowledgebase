<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-50" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-50" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-4">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="actions mb-4">
          <%= f.submit "Log in", class: "btn btn-primary mt-4" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>